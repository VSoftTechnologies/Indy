  {
   "compiler": "10.3",
   "platforms": "Win32, Win64, OSX32, OSX64, Android, Android64, iOS32, iOS64, iOSSimulator, LinuxIntel64",
   "template": "default"
  }
 ],
 "templates": [
  {
   "name": "default",
   "dependencies": [
    {
     "id": "Indy.System",
     "version": "11.0.0-alpha.1"
    }
   ],
   "source": [
    {
     "src": "..\\Core\\*.pas",
     "dest": "src\\Core"
    },
    {
     "src": "..\\Core\\*.inc",
     "dest": "src\\Core"
    },
    {
     "src": "..\\IdCompilerDefines.inc",
     "dest": "src\\Core"
    },
    {
     "src": "..\\Core\\IdAboutVCL.res",
     "dest": "src\\Core"
    },
    {
     "src": "..\\Core\\*.dcr",
     "dest": "src\\Core"
    },
    {
     "src": "..\\Core\\Res\\*.res",
     "dest": "src\\Core\\res"
    },
    {
     "src": "..\\Packages\\RAD Studio $compilerWithCodeName$\\*IndyCore.*",
     "dest": "src\\Packages\\RAD Studio $compilerWithCodeName$",
     "exclude": [
      "*.local"
     ]
    }
   ],
   "searchPaths": [
    {
     "path": "src\\core"
    }
   ],
   "build": [
    {
     "id": "IndyCore",
     "project": "src\\Packages\\$compilerWithCodeName$\\IndyCore.dproj",
     "config": "Release"
    },
    {
     "id": "dclIndyCore",
     "project": "src\\Packages\\$compilerWithCodeName$\\dclIndyCore.dproj",
     "designOnly": true,
     "config": "Release"
    }
   ],
   "design": [
    {
     "buildId": "dclIndyCore",
     "src": ".\\bin\\dclIndyCore.bpl",
     "install": true
    }
   ],
   "runtime": [
    {
     "buildId": "IndyCore",
     "src": ".\\bin\\IndyCore.bpl"
    }
   ],
   "lib": [
    {
     "src": ".\\lib\\$compiler$\\$platform$\\lib",
     "dest": "lib",
     "ignore": true
    }
   ]
  }
 ]
}
